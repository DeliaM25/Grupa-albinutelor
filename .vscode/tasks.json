{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build mysqlite",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++11",
        "-g",
        "phase_1.cpp",
        "create_table.cpp",
        "drop_table.cpp",
        "display_table.cpp",
        "main_engine.cpp",
        "-o",
        "mysqlite"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build MySQLite project (Phase 1)"
    }
  ]
}